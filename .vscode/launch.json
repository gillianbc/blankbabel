    "version": "0.2.0",
    "configurations": [

        {
            "type": "node",
            "request": "launch",
            "name": "Jest Test",
            "program": "${workspaceFolder}/node_modules/jest/bin/jest",
            "sourceMaps": true,
            "console": "integratedTerminal",
            "outDir": "${workspaceFolder}/lib",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}/src/index.js",
            "sourceMaps": true,
            "outDir": "${workspaceFolder}/lib"
        }
    ]
}
